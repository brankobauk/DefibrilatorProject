@model DefibrilatorProject.Models.ViewModels.MaintenanceViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MaintenanceViewModel</legend>
        @Html.HiddenFor(model => model.Maintenance.MaintenanceId)
        <div class="editor-label">
            @Html.LabelFor(model => model.Companies)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(x => x.CompanyId, Model.Companies)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Maintenance.SoldProduct)
        </div>
        <div class="editor-field" id="SoldProductIdDiv">
            @Html.DropDownListFor(x => x.Maintenance.SoldProductId, Model.SoldProducts)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Maintenance.ProductProperty)
        </div>
        <div class="editor-field" id="ProductPropertyIdDiv">
            @Html.DropDownListFor(x => x.Maintenance.ProductPropertyId, Model.ProductProperties)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Maintenance.DateOfMainenance)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Maintenance.DateOfMainenance)
            @Html.ValidationMessageFor(model => model.Maintenance.DateOfMainenance)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Maintenance.Notes)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Maintenance.Notes)
            @Html.ValidationMessageFor(model => model.Maintenance.Notes)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/maintenance/edit")
}
