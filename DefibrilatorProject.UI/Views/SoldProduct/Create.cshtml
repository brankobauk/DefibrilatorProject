@model DefibrilatorProject.Models.ViewModels.SoldProductViewModel

@{
    ViewBag.Title = "Create";
}
@if (ViewBag.Error != "")
{
    <div class="error">@ViewBag.Error</div>
    <div class="error">@ViewBag.SoldDate</div>
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SoldProduct</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Products)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(x => x.SoldProduct.ProductId, Model.Products)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Companies)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(x => x.SoldProduct.CompanyId, Model.Companies)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.SoldProduct.Location)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SoldProduct.Location)
            @Html.ValidationMessageFor(model => model.SoldProduct.Location)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.SoldProduct.SoldDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SoldProduct.SoldDate)
            @Html.ValidationMessageFor(model => model.SoldProduct.SoldDate)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/soldproduct")
}
